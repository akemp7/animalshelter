@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Species>;

<h1>Species</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
} 

@foreach (Species animal in Model)
{
  <li>@Html.ActionLink($"{animal.Name}", "Details", new { id = animal.Id })</li>
}

<p>@Html.ActionLink("Add new animal", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>